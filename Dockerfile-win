FROM microsoft/dotnet:2.1.2-runtime AS base
WORKDIR /app
ENV ASPNETCORE_URLS=http://*:80
EXPOSE 5000
LABEL author="MikhaÃ«l"

FROM microsoft/dotnet:2.1-sdk AS builder
WORKDIR /builder

COPY EmbyStat.Api/. .
COPY EmbyStat.Controllers/. .
COPY EmbyStat.Common/. .
COPY EmbyStat.Models/. .
COPY EmbyStat.Repositories/. .
COPY EmbyStat.Services/. .
COPY EmbyStat.Tasks/. .
COPY EmbyStat.Web/. .

FROM build AS publish
WORKDIR /builder/EmbyStat.Web
RUN dotnet publish --framework netcoreapp2.1 --configuration Release --runtime win7-x64 --output /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "EmbyStat.Web.dll", "--server.urls", "http://0.0.0.0:80"]
